<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EditarAutor">

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Actualizar Autor"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.022" />

    <EditText
        android:id="@+id/ti_actualizar_cedula"
        android:layout_width="290dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:ems="10"
        android:enabled="false"
        android:hint="NOMBRE"
        android:inputType="number"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView4" />

    <EditText
        android:id="@+id/ti_actualizar_nombre"
        android:layout_width="290dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:ems="10"
        android:hint="PAIS"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="@+id/ti_actualizar_cedula"
        app:layout_constraintStart_toStartOf="@+id/ti_actualizar_cedula"
        app:layout_constraintTop_toBottomOf="@+id/ti_actualizar_cedula" />

    <EditText
        android:id="@+id/ti_actualizar_apellido"
        android:layout_width="290dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:ems="10"
        android:hint="EDAD"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="@+id/ti_actualizar_nombre"
        app:layout_constraintStart_toStartOf="@+id/ti_actualizar_nombre"
        app:layout_constraintTop_toBottomOf="@+id/ti_actualizar_nombre" />

    <Button
        android:id="@+id/btn_actualizar_Usuario"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ACTUALIZAR AUTOR"
        app:layout_constraintEnd_toEndOf="@+id/ti_actualizar_apellido"
        app:layout_constraintStart_toStartOf="@+id/ti_actualizar_apellido"
        app:layout_constraintTop_toBottomOf="@+id/ti_actualizar_apellido" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="NOMBRE"
        app:layout_constraintBottom_toTopOf="@+id/ti_actualizar_cedula"
        app:layout_constraintStart_toStartOf="@+id/ti_actualizar_cedula" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="PAIS"
        app:layout_constraintBottom_toTopOf="@+id/ti_actualizar_nombre"
        app:layout_constraintStart_toStartOf="@+id/ti_actualizar_nombre" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="EDAD"
        app:layout_constraintBottom_toTopOf="@+id/ti_actualizar_apellido"
        app:layout_constraintStart_toStartOf="@+id/ti_actualizar_apellido" />

</androidx.constraintlayout.widget.ConstraintLayout>