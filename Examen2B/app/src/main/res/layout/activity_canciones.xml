<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Canciones">

    <Button
        android:id="@+id/btn_crearCancion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="44dp"
        android:text="CREAR"
        app:layout_constraintEnd_toEndOf="@+id/et_duracion_cancion"
        app:layout_constraintHorizontal_bias="0.532"
        app:layout_constraintStart_toStartOf="@+id/et_duracion_cancion"
        app:layout_constraintTop_toBottomOf="@+id/et_duracion_cancion" />

    <EditText
        android:id="@+id/et_duracion_cancion"
        android:layout_width="338dp"
        android:layout_height="80dp"
        android:layout_marginTop="40dp"
        android:ems="10"
        android:hint="DURACION:"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="@+id/et_genero_cancion"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/et_genero_cancion"
        app:layout_constraintTop_toBottomOf="@+id/et_genero_cancion" />

    <EditText
        android:id="@+id/et_titulo_cancion"
        android:layout_width="355dp"
        android:layout_height="82dp"
        android:ems="10"
        android:hint="TITULO:"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.066" />

    <EditText
        android:id="@+id/et_genero_cancion"
        android:layout_width="338dp"
        android:layout_height="78dp"
        android:layout_marginTop="36dp"
        android:ems="10"
        android:hint="GENERO:"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="@+id/et_titulo_cancion"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/et_titulo_cancion"
        app:layout_constraintTop_toBottomOf="@+id/et_titulo_cancion" />
</androidx.constraintlayout.widget.ConstraintLayout>