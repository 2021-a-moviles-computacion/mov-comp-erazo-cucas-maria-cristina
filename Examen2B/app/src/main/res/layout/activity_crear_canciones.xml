<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CrearCanciones">

    <fragment
        android:id="@+id/fr_CrearCancionMapa"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="362dp"
        android:layout_height="253dp"
        android:layout_marginTop="8dp"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="@+id/ti_duracion"
        app:layout_constraintHorizontal_bias="0.513"
        app:layout_constraintStart_toStartOf="@+id/ti_duracion"
        app:layout_constraintTop_toBottomOf="@+id/ti_duracion"
        tools:context=".MapsFragment" />

    <TextView
        android:id="@+id/tv_tituloCrearCasa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CREAR CANCION"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.043" />

    <EditText
        android:id="@+id/ti_direccion"
        android:layout_width="290dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:ems="10"
        android:enabled="false"
        android:hint="DIRECCION"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="@+id/bnt_BuscarEnMapa"
        app:layout_constraintStart_toStartOf="@+id/bnt_BuscarEnMapa"
        app:layout_constraintTop_toBottomOf="@+id/bnt_BuscarEnMapa" />

    <EditText
        android:id="@+id/ti_titulo"
        android:layout_width="290dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="52dp"
        android:ems="10"
        android:hint="TITULO"
        android:inputType="textShortMessage"
        app:layout_constraintStart_toStartOf="@+id/ti_direccion"
        app:layout_constraintTop_toBottomOf="@+id/ti_direccion" />

    <EditText
        android:id="@+id/ti_genero"
        android:layout_width="290dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:ems="10"
        android:hint="GENERO"
        android:inputType="textShortMessage"
        app:layout_constraintEnd_toEndOf="@+id/ti_titulo"
        app:layout_constraintStart_toStartOf="@+id/ti_titulo"
        app:layout_constraintTop_toBottomOf="@+id/ti_titulo" />

    <EditText
        android:id="@+id/ti_duracion"
        android:layout_width="290dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:ems="10"
        android:hint="DURADION"
        android:inputType="textShortMessage"
        app:layout_constraintEnd_toEndOf="@+id/ti_genero"
        app:layout_constraintStart_toStartOf="@+id/ti_genero"
        app:layout_constraintTop_toBottomOf="@+id/ti_genero" />

    <Button
        android:id="@+id/btn_CrearCancion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="44dp"
        android:text="CREAR"
        app:layout_constraintEnd_toEndOf="@+id/ti_duracion"
        app:layout_constraintHorizontal_bias="0.559"
        app:layout_constraintStart_toStartOf="@+id/ti_duracion"
        app:layout_constraintTop_toBottomOf="@+id/ti_duracion" />

    <Button
        android:id="@+id/btn_ir_crearDireccionMapa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ubicacion"
        app:layout_constraintEnd_toEndOf="@+id/ti_direccion"
        app:layout_constraintTop_toBottomOf="@+id/ti_direccion" />

    <Button
        android:id="@+id/btn_guardarUbicacion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:text="Guardar"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/fr_CrearCancionMapa"
        app:layout_constraintHorizontal_bias="0.513"
        app:layout_constraintStart_toStartOf="@+id/fr_CrearCancionMapa"
        app:layout_constraintTop_toBottomOf="@+id/fr_CrearCancionMapa"
        app:layout_constraintVertical_bias="0.095" />

    <EditText
        android:id="@+id/ti_latitud_crear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:ems="10"
        android:hint="Latitud"
        android:inputType="numberSigned|numberDecimal"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="@+id/tv_tituloCrearCasa"
        app:layout_constraintStart_toStartOf="@+id/tv_tituloCrearCasa"
        app:layout_constraintTop_toBottomOf="@+id/tv_tituloCrearCasa" />

    <EditText
        android:id="@+id/ti_longitud_crear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:hint="Longitud"
        android:inputType="numberSigned|numberDecimal"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="@+id/ti_latitud_crear"
        app:layout_constraintStart_toStartOf="@+id/ti_latitud_crear"
        app:layout_constraintTop_toBottomOf="@+id/ti_latitud_crear" />

    <Button
        android:id="@+id/bnt_BuscarEnMapa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="Buscar"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="@+id/ti_longitud_crear"
        app:layout_constraintStart_toStartOf="@+id/ti_longitud_crear"
        app:layout_constraintTop_toBottomOf="@+id/ti_longitud_crear" />

    <androidx.constraintlayout.widget.Barrier
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:barrierDirection="left"
        tools:layout_editor_absoluteX="394dp"
        tools:layout_editor_absoluteY="291dp" />

</androidx.constraintlayout.widget.ConstraintLayout>