<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".VerAutores">

    <TextView
        android:id="@+id/txtListaAutores"
        android:layout_width="228dp"
        android:layout_height="98dp"
        android:layout_marginTop="16dp"
        android:text="LISTA DE AUTORES"
        android:textSize="34sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ListView
        android:id="@+id/lv_listaAutores"
        android:layout_width="340dp"
        android:layout_height="534dp"
        android:layout_marginTop="36dp"
        app:layout_constraintEnd_toEndOf="@+id/txtListaAutores"
        app:layout_constraintStart_toStartOf="@+id/txtListaAutores"
        app:layout_constraintTop_toBottomOf="@+id/txtListaAutores" />
</androidx.constraintlayout.widget.ConstraintLayout>