<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".VerCanciones">

    <TextView
        android:id="@+id/txt_VerCanciones"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Lista Canciones"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.442"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.095" />

    <ListView
        android:id="@+id/lv_listaCanciones"
        android:layout_width="328dp"
        android:layout_height="304dp"
        android:layout_marginTop="72dp"
        app:layout_constraintEnd_toEndOf="@+id/txt_VerCanciones"
        app:layout_constraintHorizontal_bias="0.425"
        app:layout_constraintStart_toStartOf="@+id/txt_VerCanciones"
        app:layout_constraintTop_toBottomOf="@+id/txt_VerCanciones" />

    <Button
        android:id="@+id/btn_crearcancion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="96dp"
        android:text="Nueva Cancion"
        app:layout_constraintEnd_toEndOf="@+id/lv_listaCanciones"
        app:layout_constraintStart_toStartOf="@+id/lv_listaCanciones"
        app:layout_constraintTop_toBottomOf="@+id/lv_listaCanciones" />
</androidx.constraintlayout.widget.ConstraintLayout>